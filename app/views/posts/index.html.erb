<p id="notice"><%= notice %></p>

<h1>Listing Posts</h1>

<div class="row grid">
  <% @posts.each do |post| %>
    <div class="col-sm-6 col-md-4 col-lg-3 grid-item">
      <div class="panel panel-default">
        <% unless (post.title=='') %><div class="panel-heading"><h4><%= post.title %></h4></div><% end %>
        <div class="panel-body">
          <%= link_to image_tag(post.post_image.url(:large), class: "post-image"), post %>
          <% unless (post.title=='') %>
            <div class="discription">
              <%= post.description %>
            </div>
          <% end %>
          <div class="actions">
            <% if user_signed_in? %>
              <%= link_to 'Edit', edit_post_path(post), class: "btn btn-default btn-sm" %>&nbsp;&nbsp;
              <%= link_to 'Destroy', post, class: "btn btn-default btn-sm", method: :delete, data: { confirm: 'Are you sure?' } %>
            <% end %>
          </div>
        </div>
      </div>
    </div>
  <% end %>
</div>


<%= link_to 'New Post', new_post_path, class: "btn btn-default" %>
